<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.epfl.appspy.activity.RightsActivity">



    <Button
        android:text="Send DB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendDB"
        android:id="@+id/button_send_db"/>

    <Button
        android:text="Test Path / test command / show data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_send_db"
        android:onClick="testAccess"
        android:id="@+id/button_test_path"/>


    <Button
        android:text="Compute stat now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/button_send_db"
        android:onClick="computeStatNow"
        android:id="@+id/button_compute_now"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_compute_now"
        android:id="@+id/scrollView">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:id="@+id/textview"/>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on sendDB"
        android:id="@+id/pathTextView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_test_path"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>
